<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:id="@+id/chat_bubble_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="70dp"
        android:background="@drawable/outgoing_chat_bubble">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:paddingBottom="5dp"
            android:paddingEnd="13dp"
            android:paddingLeft="9dp"
            android:paddingRight="13dp"
            android:paddingStart="9dp"
            android:paddingTop="5dp"
            android:text="Hello this is test message only. So don't bother, actual message will appear better"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/chat_bubble_layout"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="12:33 pm"
        android:textSize="12sp" />
</RelativeLayout>
